---
import Layout from "../layouts/Layout.astro";
import { useCloud } from "freestyle-sh";
---

<Layout title="Reilly Vejar">
  <main class="bg-eggshell h-[100vh] flex items-center justify-center">
    <div id="draggable" class="text-transparent text-center text-6xl sm:text-9xl font-montserrat-extrabold heading name-gradient relative -translate-y-10 select-none">
      Reilly Vejar
    </div>
  </main>
  <section class="bg-[#000000] h-[100vh]">
    <div class="text-white font-montserrat-regular text-4xl p-7">
      About Me
    </div>
    <div class="text-white font-sourcecodepro-light text-xl p-7">
        I am a third year at the University of Chicago majoring in Math and Computer Science. Blah blah blah.
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    const draggable = document.getElementById('draggable') as HTMLElement;

    draggable.addEventListener('mousedown', function (e) {
      draggable.style.cursor = 'grabbing';
      const offsetX = e.clientX// + parseFloat(draggable.style.left);
      const offsetY = e.clientY// + parseFloat(draggable.style.top);

      function onMouseMove(event: MouseEvent) {
        draggable.style.left = event.pageX - offsetX + 'px'//- offsetX + 'px';
        draggable.style.top = event.pageY - offsetY + 'px'//- offsetY + 'px';
      }

      function onMouseUp() {
        document.removeEventListener('mousemove', onMouseMove);
        document.removeEventListener('mouseup', onMouseUp);
        draggable.style.cursor = 'grab';
      }

      document.addEventListener('mousemove', onMouseMove);
      document.addEventListener('mouseup', onMouseUp);
    });
  }); 
</script>

<style>
    .name-gradient {
      background-image: linear-gradient(45deg, #530909 0%, #e42f2f 50%, #530909 100%);
      -webkit-background-clip: text;
      background-clip: text;
      line-height: 1.3;
  }
</style>